<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.weatherapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.weatherapp.Weather"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.weatherapp.Welcome"
            android:label="@string/title_activity_welcome" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.weatherapp.Weather_ZipCodeSearch"
            android:label="@string/title_activity_weather__zip_code_search" >
        </activity>
        <activity
            android:name="com.example.weatherapp.SearchWeatherByZip"
            android:label="@string/title_activity_search_weather_by_zip" >
        </activity>
        <activity
            android:name="com.example.weatherapp.DefaultWeather"
            android:label="@string/title_activity_default_weather" >
        </activity>
        <activity
            android:name="com.example.weatherapp.SearchWeatherByLanguage_Marathi"
            android:label="@string/title_activity_search_weather_by_language__marathi" >
        </activity>
        <activity
            android:name="com.example.weatherapp.Setting"
            android:label="@string/title_activity_setting" >
        </activity>
    </application>

</manifest>
